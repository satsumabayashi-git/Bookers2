<h1>User Info</h1>
<%= image_tag current_user.get_profile_image(100,100) %>
<%= current_user.id %>
<h3><%= current_user.name %></h3>

<h1>New Book</h1>
<%= form_with model: @post_book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <div>
    <p><%= image_tag user.get_profile_image(100,100) %></p>
    <p><%= user.name %></p>
    <p><%= link_to "Show", user_path(user.id) %></p>
  </div>
<% end %>