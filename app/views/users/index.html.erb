<p></p>
<div class="container px-5 px-sm-0">
  <div>
    <% if @book_new.errors.any? %>
      <h3><%= @book_new.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <%= @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/leftside', user: current_user, book_new: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
              	<%= image_tag user.get_profile_image(80,80) %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>