<%= render 'books/leftside', book_new: @book_new, user: @user %>

<h1>User</h1>
<hr>
<table rules="groups">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= "#{book.body}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>