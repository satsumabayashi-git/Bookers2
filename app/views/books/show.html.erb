<p></p>
<div class="container px-5 px-sm-0">
  <div>
    <% if @book_new.errors.any? %>
      <h3><%= @book_new.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <%= @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/leftside', book_new: @book_new, user: @book.user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
              <td><%= "#{@book.body}" %></td>
              <% if @book.user_id == current_user.id %>
                <td>
                  <%= link_to edit_book_path(@book.id), class: "btn btn-success" do %>
                    Edit
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(@book.id), method: :delete, class: "btn btn-danger" do %>
                    Destroy
                  <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<p><%= link_to "#{@book.user.name}", @book.user %><p>