<%= render 'books/leftside', book_new: @book_new, user: @book.user %>

<h1>Book Detail</h1>
<hr>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(80,80) %></td>
      <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
      <td><%= "#{@book.opinion}" %></td>
      <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<p><%= link_to "#{@book.user.name}", @book.user %><p>