<h1>User Info</h1>
<%= image_tag @post_book.user.get_profile_image(100,100) %>
<p><%= @post_book.user.id %></p>
<p>Name <%= @post_book.user.name %></p>
<p>Introduction <%= @post_book.user.introduction %></p>

<h1><%= link_to 'Edit', edit_user_path(current_user.id) %></h1>

<h1>New Book</h1>
<%= form_with model: @post_book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book Detail</h1>
<hr>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @post_book.user.get_profile_image(80,80) %></td>
      <td><%= link_to "#{@post_book.title}", post_book_path(@post_book.id) %></td>
      <td><%= "#{@post_book.opinion}" %></td>
      <% if @post_book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_post_book_path(@post_book.id) %></td>
        <td><%= link_to "Destroy", post_book_path(@post_book.id), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<p><%= link_to "#{@post_book.user.name}", @post_book.user %><p>