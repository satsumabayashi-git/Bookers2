<h1>User Info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<%= @user.id %>
<h3><%= @user.name %></h3>

<h1><%= link_to 'Edit', edit_user_path(current_user.id) %></h1>

<h1>New Book</h1>
<%= form_with model: @post_book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book Detail</h1>
<div>
  <p><%= image_tag 'gazou-mu.jpg' %></p>
  <p><%= @post_book.id %></p>
  <p><%= @post_book.title %></p>
  <p><%= @post_book.opinion %></p>
  <% if @post_book.user_id == current_user.id %>
    <%= link_to "削除", post_book_path(@post_book.id), method: :delete %>
  <% else %>
    <h4>else</h4>
  <% end %>
</div>