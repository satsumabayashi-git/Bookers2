<h1>User Info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<p><%= user.id %></p>
<p>Name <%= user.name %></p>
<p>Introduction <%= user.introduction %></p>

<h1><%= link_to 'Edit', edit_user_path(current_user.id) %></h1>

<h1>New Book</h1>
<%= form_with model: post_book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>